+    private Button btnCerrarSesion;
+
+    @FXML
+    private VBox vboxFrio, vboxCaliente;
+
+    @FXML
+    private Label bocadilloSeleccionadoLabel;
+
+    @FXML
+    private Label precioSeleccionadoLabel;
+
+    @FXML
