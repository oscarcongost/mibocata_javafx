<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="1080.0" prefWidth="1080.0" style="-fx-background-color: #1d1d1b;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.mibocatajavafx.controller.SeleccionBocataController">
    <!-- Encabezado con línea debajo -->
    <top>
        <VBox>
            <HBox alignment="CENTER" spacing="350.0" style="-fx-background-color: #1d1d1b; -fx-padding: 15px;">
                <!-- Logo -->
                <ImageView fitHeight="80.0" fitWidth="100.0" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@../assets/img.png" />
                    </image>
                </ImageView>
                <!-- Título -->
                <Label style="-fx-text-fill: white; -fx-font-size: 35px; -fx-font-weight: bold; -fx-font-family: 'System';" text="SELECCIÓN BOCATA">
                    <HBox.margin>
                        <Insets left="40.0" />
                    </HBox.margin>
                </Label>
                <!-- Nombre del usuario -->
                <VBox alignment="CENTER" spacing="10.0">
                    <Label fx:id="nombreLabel" style="-fx-text-fill: white; -fx-font-size: 30px; -fx-font-weight: bold;" text="Usuario" />

                    <Button fx:id="btnCerrarSesion" onAction="#cerrarSesion" style="-fx-background-color: #ffffff; -fx-text-fill: Black; -fx-font-size: 16px; -fx-padding: 10px; -fx-font-weight: Bold; -fx-border-color: Red; -fx-border-width: 3px; -fx-border-radius: 5px; -fx-background-radius: 5px; -fx-border-insets: -1;" text="Cerrar Sesión" />
                </VBox>

            </HBox>
            <!-- Línea debajo del encabezado (usando un Region con borde) -->
            <Region style="-fx-border-color: #eeeeee; -fx-border-width: 0 0 2 0;" />
        </VBox>
    </top>

    <!-- Contenido central con los "botones" simulados -->
    <center>
        <VBox alignment="CENTER" spacing="30.0" VBox.vgrow="ALWAYS">
            <HBox alignment="CENTER" spacing="100.0" HBox.hgrow="ALWAYS" VBox.vgrow="ALWAYS">

                <!-- Columna izquierda: Botón Bocadillo Frío -->
                <VBox alignment="CENTER" spacing="10.0" HBox.hgrow="ALWAYS">
                    <!-- Texto encima del botón -->
                    <Label style="-fx-text-fill: #5CB338; -fx-font-size: 22px; -fx-font-weight: bold;" text="Bocadillo Frío">
                  <VBox.margin>
                     <Insets left="45.0" />
                  </VBox.margin></Label>
                    <!-- VBox simulando un botón -->
                    <VBox fx:id="vboxFrio" alignment="CENTER" prefHeight="240.0" prefWidth="200.0" spacing="20.0" style="-fx-background-color: #FFFFFF; -fx-border-color: #008000; -fx-border-width: 5px; -fx-border-radius: 8px; -fx-padding: 20px; -fx-background-radius: 12px;">
                        <Label fx:id="nombreFrio" style="-fx-text-fill: #5CB338; -fx-font-size: 20px; -fx-font-weight: Bold;" text="Salmon">
                     <VBox.margin>
                        <Insets bottom="10.0" />
                     </VBox.margin></Label>
                        <Label fx:id="ingredientesFrio" style="-fx-text-fill: #5CB338; -fx-font-size: 18px; -fx-font-weight: Bold;" text="Ejemplo: Jamón y queso" />
                        <Label fx:id="precioFrio" style="-fx-text-fill: #5CB338; -fx-font-size: 17px; -fx-font-weight: Bold;" text="Ideal para días frescos" />
                  <VBox.margin>
                     <Insets left="50.0" />
                  </VBox.margin>
                    </VBox>
                </VBox>

                <!-- Línea vertical entre los botones -->
                <Region maxHeight="Infinity" minHeight="0" style="-fx-border-color: #eeeeee; -fx-border-width: 0 2 0 0;" VBox.vgrow="ALWAYS" />

                <!-- Columna derecha: Botón Bocadillo Caliente -->
                <VBox alignment="CENTER" spacing="25.0" HBox.hgrow="ALWAYS">
                    <!-- Texto encima del botón -->
                    <Label style="-fx-text-fill: #E52020; -fx-font-size: 22px; -fx-font-weight: bold;" text="Bocadillo Caliente">
                  <VBox.margin>
                     <Insets bottom="-15.0" right="45.0" />
                  </VBox.margin></Label>
                    <!-- VBox simulando un botón -->
                    <VBox fx:id="vboxCaliente" alignment="CENTER" prefHeight="240.0" prefWidth="200.0" spacing="20.0" style="-fx-background-color: #FFFFFF; -fx-border-color: #B22222; -fx-border-width: 5px; -fx-border-radius: 8px; -fx-padding: 20px; -fx-background-radius: 12px;">
                        <Label fx:id="nombreCaliente" style="-fx-text-fill: #E52020; -fx-font-size: 20px; -fx-font-weight: Bold;" text="Salmon">
                     <VBox.margin>
                        <Insets bottom="10.0" />
                     </VBox.margin></Label>
                        <Label fx:id="ingredientesCaliente" style="-fx-text-fill: #E52020; -fx-font-size: 18px; -fx-font-weight: Bold;" text="Atun" />
                        <Label fx:id="precioCaliente" style="-fx-text-fill: #E52020; -fx-font-size: 17px; -fx-font-weight: Bold;" text="3,80" />
                  <VBox.margin>
                     <Insets right="50.0" />
                  </VBox.margin>
                    </VBox>
                </VBox>
            </HBox>
        </VBox>
    </center>

    <!-- Línea y Botón Confirmar Pedido en la parte inferior -->
    <bottom>
        <VBox>
            <!-- Línea arriba del botón Confirmar Pedido (usando un Region con borde) -->
            <Region style="-fx-border-color: #eeeeee; -fx-border-width: 2 0 0 0;" />

            <HBox alignment="CENTER_LEFT" spacing="20.0" style="-fx-padding: 20px;" HBox.hgrow="ALWAYS">
                <!-- Label de Bocadillo Seleccionado alineado a la izquierda -->
                <Label fx:id="bocadilloSeleccionadoLabel" style="-fx-text-fill: white; -fx-font-size: 20px; -fx-font-weight: Bold;" text="No hay bocadillo seleccionado" />

                <!-- Espaciador flexible -->
                <Region HBox.hgrow="ALWAYS" />

                <!-- Botón Confirmar Pedido alineado a la derecha -->
                <Button fx:id="btnConfirmar" style="-fx-background-color: #eeeeee; -fx-text-fill: Black; -fx-font-size: 17px; -fx-padding: 15px 30px; -fx-font-weight: Bold;" text="Confirmar Pedido" />
            </HBox>

        </VBox>
    </bottom>
</BorderPane>
